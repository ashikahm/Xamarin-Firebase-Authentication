<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFireBaseAuth.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout Margin="20"  VerticalOptions="Center"  Spacing="20">
            <Label HorizontalOptions="Center" Text="Forgot Password?" TextColor="Black" FontAttributes="Bold" FontSize="Large"/>
            <Entry Placeholder="Email" x:Name="Forgot_Password_Entry" />
            <Button Text="Reset Password" HorizontalOptions="Center" BackgroundColor="#5F9DF7" TextColor="White" FontAttributes="Bold" FontSize="Medium" WidthRequest="120" HeightRequest="70" CornerRadius="20" Clicked="Reset_Password_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>